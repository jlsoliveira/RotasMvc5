@model IEnumerable<RotasMvc5.Models.Noticia>
@{
    ViewBag.Title = "Home Page";
}

<h2>Mostra as últimas 3 notícias </h2>
<div>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                @Html.ActionLink(item.Titulo, "MostrarNoticias", "Home", new
                {
                    @noticiaId = item.NoticiaId,
                    @categoria = item.Categoria,
                    @titulo = item.Titulo.ToLower()
                }, null);

                <em>@Html.DisplayFor(modelItem => item.Categoria)</em>
                <b>@Html.DisplayFor(modelItem => item.Data)</b>
            </li>
        }
    </ul>
</div>

<h2>Todas as categorias</h2>
<div>
    <ul>
        @foreach (string item in ViewBag.Categoria)
        {
            <li>
                @Html.ActionLink(item, "MostrarCategoria", "Home", new { @categoria = item }, null)
            </li>
        }
    </ul>
</div>

<h2>Todas as noticias</h2>
<div>
    @Html.ActionLink("Todas as Noticias", "todasAsNoticias")
</div>